#include <stdio.h>
#define MAX 10

int queue[MAX];
int front = -1, rear = -1;

// Function to insert a job into the queue
void insertJob(int job) {
    if (rear == MAX - 1) {
        printf("Queue is full. Cannot insert job %d\n", job);
        return;
    }
    if (front == -1)
        front = 0;
    rear++;
    queue[rear] = job;
    printf("Job %d inserted into the queue.\n", job);
}

// Function to delete a job from the queue
void deleteJob() {
    if (front == -1 || front > rear) {
        printf("Queue is empty. No job to delete.\n");
        return;
    }
    printf("Job %d deleted from the queue.\n", queue[front]);
    front++;
}

// Function to display all jobs in the queue
void displayJobs() {
    if (front == -1 || front > rear) {
        printf("Queue is empty.\n");
        return;
    }
    printf("Current Jobs in Queue: ");
    for (int i = front; i <= rear; i++)
        printf("%d ", queue[i]);
    printf("\n");
}

int main() {
    int choice, job;
    while (1) {
        printf("\n--- Job Queue Menu ---\n");
        printf("1. Insert Job\n");
        printf("2. Delete Job\n");
        printf("3. Display Jobs\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter job number: ");
                scanf("%d", &job);
                insertJob(job);
                break;
            case 2:
                deleteJob();
                break;
            case 3:
                displayJobs();
                break;
            case 4:
                printf("Exiting program...\n");
                return 0;
            default:
                printf("Invalid choice! Please try again.\n");
        }
    }
}
